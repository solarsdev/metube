header.header 
  .header__column 
    a(href=routes.home) 
      i.fab.fa-youtube
  .header__column 
    form(action=routes.search, method="get") 
      input(type="text", name="search_query", placeholder="検索")
  .header__column 
    ul 
      if !user.isAuthenticated
        li 
          a(href=routes.join) Join 
        li 
          a(href=routes.login) Login
      else
        li 
          a(href=`${routes.videos}${routes.videoUpload}`) Upload
        li 
          a(href=routes.userDetail(user.id)) Profile
        li 
          a(href=routes.logout) Logout 
